<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:textSize="18sp"
      android:background="@drawable/bg"
    tools:context="com.ouch.mpgyan.HistoricalResultActivity$PlaceholderFragment" >
 <TextView
        android:id="@+id/H_Basic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:textSize="18sp" 
        android:textStyle="bold" 
        android:gravity="left" 
        android:textIsSelectable="true"/>
    <TextView
        android:id="@+id/H_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:gravity="left"
        android:textSize="16sp" 
        android:layout_below="@+id/H_Basic"
        android:textIsSelectable="true"/>

    <TextView
        android:id="@+id/H_Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:textSize="16sp" 
        android:layout_below="@id/H_Name"
        android:textIsSelectable="true"/>

    <TextView
        android:id="@+id/H_Constituency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" 
        android:layout_marginRight="3dp"
        android:layout_below="@id/H_Gender"
        android:textIsSelectable="true"/>

    <TextView
        android:id="@+id/H_State"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" 
        android:layout_marginRight="3dp"
        android:layout_below="@id/H_Constituency"
        android:textIsSelectable="true"/>

    <TextView
        android:id="@+id/H_Party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" 
        android:layout_marginRight="3dp"
        android:layout_below="@id/H_State"
        android:textIsSelectable="true"
        />

</RelativeLayout>